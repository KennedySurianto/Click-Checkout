<%- include("partials/header.ejs") %>

    <div class="d-flex align-items-center py-4 w-100 bg-gradient-blue" style="height: 80vh;">
        <div class="container mt-5">
            <div class="card mx-auto shadow-lg" style="width: 300px;">
                <div class="card-header">
                    <h5 class="card-title fw-bold">Login</h5>
                </div>
                <div class="card-body">
                    <form action="/login" method="post">
                        <div class="form-floating mb-3">
                            <input type="email" name="email" class="form-control" id="floatingInput"
                                placeholder="name@example.com">
                            <label for="email">Email address</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" name="password" class="form-control" id="floatingPassword"
                                placeholder="Password">
                            <label for="password">Password</label>
                        </div>
                        <div class="form-check text-start my-3">
                            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Remember me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary button"><span>Login</span></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>